<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.socialnetwork">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CALL_PHONE" />

    <application
        android:name=".Base.BaseApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".View.Home.Tab_home.VideoActivity"></activity>
        <activity android:name=".View.Chat.CreateGroupActivity" />
        <activity android:name=".View.Chat.ChatActivity" />
        <activity android:name=".View.Comment.CommentActivity" />
        <activity android:name=".View.Profile.ProfileActivity" />
        <activity android:name=".View.Splash.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".View.Home.HomeActivity" />
        <activity android:name=".View.Authen.RegisterActivity" />
        <activity android:name=".View.Authen.LoginActivity" />
        <activity android:name=".View.Authen.AuthenActivity" />
    </application>

</manifest>